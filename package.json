{
    "name": "minter-api-js",
    "description": "JavaScript library to interact with Minter Protocol via RPC API",
    "version": "0.0.1",
    "homepage": "https://github.com/FunFaSy/minter-api-js",
    "author": "FunFaSy Team",
    "main": "lib/index.js",
    "browser": "lib/browser-index.js",
    "types": "lib/index.d.ts",
    "dependencies": {

        "bip39": "^3.0.4",
        "bn.js": "5.2.0",
        "bs58check": "^2.1.2",
        "crypto-js": "^4.1.1",
        "depd": "^2.0.0",
        "error-polyfill": "^0.1.3",
        "ethereum-cryptography": "^0.1.3",
        "ethereumjs-common": "^1.5.2",
        "ethereumjs-util": "^7.1.3",
        "http-errors": "^1.7.2",
        "js-sha256": "^0.9.0",
        "json-stringify-safe": "^5.0.1",
        "minterjs-tx": "^10.0.1",
        "minterjs-util": "^0.21.0",
        "mustache": "^4.0.0",
        "node-fetch": "^2.6.1",
        "qs": "^6.10.1",
        "text-encoding-utf-8": "^1.0.2",
        "tweetnacl": "^1.0.1"
    },
    "devDependencies": {
        "@types/crypto-js": "^4.0.2",
        "@types/bn.js": "^5.1.0",
        "@types/http-errors": "^1.6.1",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "browserify": "^16.2.3",
        "bundlewatch": "^0.3.1",
        "danger": "^10.6.6",
        "danger-plugin-yarn": "^1.3.2",
        "eslint": "^6.5.1",
        "in-publish": "^2.0.0",
        "jest": "^26.0.1",
        "localstorage-memory": "^1.0.3",
        "rimraf": "^3.0.0",
        "semver": "^7.1.1",
        "ts-jest": "^26.5.6",
        "ts-morph": "^11.0.3",
        "typedoc": "0.20.37",
        "typedoc-neo-theme": "^1.1.1",
        "typescript": "4.2.4",
        "uglifyify": "^5.0.1"
    },
    "keywords": [],
    "license": "(MIT AND Apache-2.0)",
    "scripts": {
        "dist": "yarn browserify && yarn doc",
        "browserify": "browserify browser-exports.js -i node-fetch -i http -i https -o dist/minter-api-js.js && browserify browser-exports.js -i node-fetch -g uglifyify -o dist/minter-api-js.min.js",
        "prebrowserify": "yarn build",
        "prepublish": "not-in-install && (yarn build && yarn browserify) || in-install",
        "compile": "tsc -p ./tsconfig.json",
        "dev": "yarn compile -w",
        "doc": "typedoc src && touch docs/.nojekyll",
        "build": "yarn compile",
        "test": "jest test",
        "lint": "eslint test && eslint src/**/*.ts",
        "fix": "eslint test --fix && eslint src/**/*.ts --fix",
        "prefuzz": "yarn build",
        "fuzz": "jsfuzz test/fuzz/borsh-roundtrip.js test/fuzz/corpus/"
    },
    "bundlewatch": {
        "files": [
            {
                "path": "dist/minter-api-js.min.js",
                "maxSize": "105kB"
            }
        ]
    },
    "files": [
        "lib",
        "dist",
        "browser-exports.js"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules"
        ]
    }
}
